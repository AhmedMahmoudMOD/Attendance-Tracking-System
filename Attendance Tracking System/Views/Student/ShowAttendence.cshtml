@model List<StudentAttendance>
@{
    ViewData["Title"] = "Show Attendence";
    var degree = ViewBag.Degree;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css">
    <!-- Custom CSS for styling -->
    <style>
        body {
            padding-top: 20px; 
        }

        table.dataTable thead th {
            text-align: center; 
            background-color: #001F3D; 
            color: #FFFFFF; 
        }

        table.dataTable tbody td {
            vertical-align: middle; 
        }
        #degree{
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="my-4">Student Attendance</h1>
        <h4 class="my-4">Your Attendance Degree:<h3 id="degree" class="my-4">@degree</h3> </h4>
       
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="permission">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Student Name</th>
                        <th>Arrival Time</th>
                        <th>Leave Time</th>
                        <th>Attendance Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Date</td>
                            <td>@item.ArrivalTime</td>
                            <td>@item.LeaveTime</td>
                            <td>@item.AttendanceStatus</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#permission').DataTable();
        });
    </script>
</body>
</html>
