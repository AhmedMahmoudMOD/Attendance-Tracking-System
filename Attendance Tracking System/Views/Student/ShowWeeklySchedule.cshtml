@model List<Schedule>
@{
    ViewData["Title"] = "Show Weekly Schedule";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css">
    <!-- Custom CSS for styling -->
    <style>
        /* Add custom styles here */
        body {
            padding-top: 50px; /* Adjust top padding to avoid overlapping with fixed navbar */
        }

        table.dataTable thead th {
            text-align: center; /* Center align table header text */
            background-color: #001F3D; /* Set background color */
            color: #FFFFFF; /* Set text color */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="my-4">@ViewData["Title"]</h1>
        <table class="table table-bordered table-striped" id="schedule">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date</td>
                        <td>@item.StartTime</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#schedule').DataTable();
        });
    </script>
</body>
</html>
