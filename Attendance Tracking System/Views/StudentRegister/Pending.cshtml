	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f0f0f0;
        }

        .container {
            text-align: center;
        }

        h1, h2 {
            color: #333;
        }

        img {
            margin-top: 20px;
            max-width: 100%;
        }

        .icon {
            font-size: 100px;
            color: #333; /* Optional */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Your Information Saved Successfully!</h1>
        <h2>We will revise your data. Please keep in touch.</h2>
            <img src="~/images/pending.svg" />
        <div class="icon">
            <i class="fas fa-spinner fa-spin"></i>
        </div>
    </div>
</body>
</html>
