@model Instructor
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="/css/styles.css" rel="stylesheet" />
    <link href="/css/ss.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="sb-topnav navbar navbar-expand">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="index.html">Instructor DashBoard</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars" style="color:white"></i></button>
        <!-- Navbar-->
        <div class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0"></div>
    </nav>
    <div id="layoutSidenav"  >
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        @*  <div class="sb-sidenav-menu-heading">Core</div> *@
                        <a class="nav-link m-1" asp-action="Details" asp-asp-controller="instructor" asp-route-Id="@Model.Id">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Profile
                        </a>
                        <div class="sb-sidenav-menu-heading">Interface</div>
                        <a class="nav-link collapsed m-1" asp-action="TrackSchedule" asp-controller="instructor" asp-route-Id="@Model.Id">
                            <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                            Track Shedulue
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link me-3" href="layout-static.html">Static Navigation</a>
                                <a class="nav-link me-3 " href="layout-sidenav-light.html">Light Sidenav</a>
                            </nav>
                        </div>
                        <div class="sb-sidenav-menu-heading">Addons</div>
                        <a class="nav-link m-1" href="charts.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Charts
                        </a>
                        <a class="nav-link m-1" href="tables.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Tables
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>

                </div>
            </nav>
        </div>
        <div class="content col-md-10">
            @*  <h1>@Model.Name::@Model.Salary::@Model.Email::@Model.Password::@Model.UserImage</h1> *@
            <div class="container mt-4">
                <div class="main-body">
                    <div class="row gutters-sm">
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <img src="/images/@Model.UserImage"
                                             alt="Admin"
                                             class="rounded-circle"
                                             width="200" />
                                        <div class="mt-3">
                                            <h4>@Model.Name</h4>
                                            <p class="text-secondary mb-1">Instructor</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Full Name</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">@Model.Name</div>
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Email</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <a href="/cdn-cgi/l/email-protection"
                                               class="__cf_email__"
                                               data-cfemail="bbddd2cbfbd1ced0d6ced395dad7">@Model.Email</a>
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Age</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">@Model.Age</div>
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Mobile</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">@Model.PhoneNumber</div>
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Salary</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Model.Salary
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <a class="btn btn-info"
                                               target="__blank"
                                               href="https://www.bootdey.com/snippets/view/profile-edit-data-and-skills">Edit</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row gutters-sm">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <div>Teaching Tracks :</div>
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <td>Track ID</td>
                                                    <td>Track Name</td>
                                                    <td>Track Capacity</td>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Tracks)
                                                {
                                                    <tr>
                                                        <td>@item.Id</td>
                                                        <td>@item.Name</td>
                                                        <td>@item.Capacity</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    @{
                        var trackSupervised = ViewBag.TrackSupervised;
                        @if (trackSupervised != null)
                        {
                            <div class="row gutters-sm py-3 my-3">
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <span class="bg-primary  p-2 supervisedTrack">Supervised Track :</span>
                                            <div class="row mt-2">
                                                <div class="col-sm-6">
                                                    <h6 class="mb-0">department Id:</h6>
                                                </div>
                                                <div class="col-sm-6 text-secondary">@trackSupervised.Id</div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <h6 class="mb-0">Department Name :</h6>
                                                </div>
                                                <div class="col-sm-6 text-secondary">@trackSupervised.Name</div>
                                            </div> <div class="row">
                                                <div class="col-sm-6">
                                                    <h6 class="mb-0">Capacity :</h6>
                                                </div>
                                                <div class="col-sm-6 text-secondary">@trackSupervised.Capacity</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    <footer class="py-4 bg-light mt-auto">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="/js/scripts.js"></script>
   
   
   
</body>
</html>
