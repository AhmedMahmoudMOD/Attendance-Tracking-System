@model Instructor
@{

   
    SelectList Alltracks = new SelectList(ViewBag.AllTracks, "Id", "Name");

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="CreateEdit">
        <form asp-action="Add" asp-controller="Instructor" method="post" enctype="multipart/form-data">
          
            <div class="container mt-4 ">
                <div class="main-body ">
                    <div class="row gutters-sm">
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <img src="/Images/instructor/@Model.UserImage"
                                             alt="Admin"
                                             class="rounded-circle"
                                             width="200" />
                                        <div class="mt-3">
                                            <h4>@Model.Name</h4>
                                            <p class="text-secondary mb-1">Instructor</p>
                                        </div>
                                        <div>
                                            <input type="file" name="InsImg" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">

                                    <div class="row">
                                        <div class="col-2 d-flex align-items-center justify-content-center">
                                            <h6 class="mb-0">Name</h6>
                                        </div>
                                        <div class="col-7">
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name"></span>
                                        </div>
                                    </div>

                                    <hr />

                                    <div class="row">
                                        <div class="col-2 d-flex align-items-center justify-content-center">
                                            <h6 class="mb-0">Email</h6>
                                        </div>
                                        <div class="col-7">
                                            <input asp-for="Email" class="form-control" />
                                            <span asp-validation-for="Email"></span>
                                        </div>
                                    </div>


                                    <hr />

                                    <div class="row">
                                        <div class="col-2 d-flex align-items-center justify-content-center">
                                            <h6 class="mb-0">Age</h6>
                                        </div>
                                        <div class="col-7">
                                            <input asp-for="Age" class="form-control" />
                                            <span asp-validation-for="Age"></span>
                                        </div>
                                    </div>

                                    <hr />

                                    <div class="row">
                                        <div class="col-2 d-flex align-items-center justify-content-center">
                                            <h6 class="mb-0">Mobile Phone</h6>
                                        </div>
                                        <div class="col-7">
                                            <input asp-for="PhoneNumber" class="form-control" />
                                            <span asp-validation-for="PhoneNumber"></span>
                                        </div>
                                    </div>

                                    <hr />

                                    <div class="row">
                                        <div class="col-2 d-flex align-items-center justify-content-center">
                                            <h6 class="mb-0">Password</h6>
                                        </div>
                                        <div class="col-7">
                                            <input asp-for="Password" class="form-control" />
                                            <span asp-validation-for="Password"></span>
                                        </div>
                                    </div>


                                    <hr />

                                    <div class="row">
                                        <div class="col-2 d-flex align-items-center justify-content-center">
                                            <h6 class="mb-0">Salary</h6>
                                        </div>
                                        <div class="col-7">
                                            <input  asp-for="Salary" class="form-control" />
                                        </div>
                                    </div>
                                    <hr />
                                </div>
                            </div>
                        </div>
                    </div>
                    </<div>
                    </div>
                </div>

         

            

            <div class="text-center d-grid gap-2 col-4 mx-auto">
                <input type="submit" value="Add" class="btn btn-info" />
            </div>
        </form>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
