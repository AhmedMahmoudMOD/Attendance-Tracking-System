@model User
@{
	ViewData["Title"] = "Profile";
}
<!DOCTYPE html>
<html>
<head>
	<title>@ViewData["Title"]</title>
	<style type="text/css">

		.main-body {
			padding: 15px;
		}

		.card {
			box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
		}

		.card {
			position: relative;
			display: flex;
			flex-direction: column;
			min-width: 0;
			word-wrap: break-word;
			background-color: #fff;
			background-clip: border-box;
			border: 0 solid rgba(0, 0, 0, 0.125);
			border-radius: 0.25rem;
		}

		.card-body {
			flex: 1 1 auto;
			min-height: 1px;
			padding: 1rem;
		}

		.gutters-sm {
			margin-right: -8px;
			margin-left: -8px;
		}

			.gutters-sm > .col,
			.gutters-sm > [class*="col-"] {
				padding-right: 8px;
				padding-left: 8px;
			}

		.mb-3,
		.my-3 {
			margin-bottom: 1rem !important;
		}

		.bg-gray-300 {
			background-color: #e2e8f0;
		}

		.h-100 {
			height: 100% !important;
		}

		.shadow-none {
			box-shadow: none !important;
		}
	</style>
</head>
<body>
	<h2 style="margin:20px;color:#001F3D">My Profile</h2>
	<div class="container mt-4">
		<div class="main-body">
			<div class="row gutters-sm">
				<div class="col-md-4">
					<div class="card">
						<div class="card-body">
							<div class="d-flex flex-column align-items-center text-center">
								@if (!string.IsNullOrEmpty(@ViewBag.currentUser.UserImage))
								{
									<img class="rounded-circle" style="width:150px;height:150px" src="@Url.Content("~/images/" + @ViewBag.currentUser.UserImage)" alt="Student Image" />
								}
								else
								{

									<img class="rounded-circle" src="/images/user.png" alt="Profile Image" />
								}
								<div class="mt-3">
									<h4>@ViewBag.currentUser.Name</h4>
									<p class="text-secondary mb-1">ITI @ViewBag.role</p>
								</div>
							</div>
						</div>
					</div>

				</div>
				<div class="col-md-6">
					<div class="card mb-3">
						<div class="card-body">
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">Name</h6>
								</div>
								<div class="col-sm-9 text-secondary"> @ViewBag.currentUser.Name</div>
							</div>
							<hr  />
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">Email</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									@ViewBag.currentUser.Email
								</div>
							</div>
							<hr />
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">Age</h6>
								</div>
								<div class="col-sm-9 text-secondary"> @ViewBag.currentUser.Age</div>
							</div>
							<hr />
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">PhoneNumber</h6>
								</div>
								<div class="col-sm-9 text-secondary">@ViewBag.currentUser.PhoneNumber</div>
							</div>
							<hr />
							<div class="row">
								<div class="col-sm-12">

									<a asp-action="EditProfile" class="profile-role"> <i class="fa fa-edit"></i> Edit profile</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>

