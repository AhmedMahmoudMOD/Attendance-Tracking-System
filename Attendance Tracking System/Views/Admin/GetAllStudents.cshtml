@model IEnumerable<Student>
<html>
<head>

	<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/css/dataTable.css" rel="stylesheet" />
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.css">
</head>
<body>
	<div style="display:flex;flex-direction:row;align-content:space-between">

		<h2 style="color:#5D0E41;margin-left:10px;margin-right:60%">Students Data</h2>

		@using (Html.BeginForm("UploadExcel", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
		{
			<div class="form-group">
				<label for="file" style="display: none;">Choose Excel file:</label>
				<label for="file" class="file-input-label">
					<img src="~/images/microsoft-excel.svg" width="70px" /> Upload Excel File
				</label>
				<input type="file" name="file" id="file" class="form-control-file" accept=".xlsx,.xls" style="display: none;" />
			</div>
			<button type="submit" class="btn btn-dark">Upload</button>
		}

		@if (!string.IsNullOrEmpty(ViewBag.Message))
		{
			<div class="alert alert-info mt-3">@ViewBag.Message</div>
		}
	</div>
	<table id="example" class="table table-hover table-bordered display"
		   style="text-align:center;width:100%;border-radius:15px;">
		<thead>
			<tr style="background-color:#001F3D;color:white;text-align:center">
				<th scope="col">Id</th>
				<th scope="col">Name</th>
				<th scope="col">Image</th>
				<th scope="col">Email</th>
				<th scope="col">Password</th>
				<th scope="col">Age</th>
				<th scope="col">Delete</th>
				<th scope="col">Edit</th>
				<th scope="col">Details</th>
			</tr>
		</thead>
		<tbody>
			@if (Model.Count() == 0)
			{
				<tr>
					<td colspan="9" style="font-weight:bold">No Students Yet!</td>
				</tr>
			}
			else
			{
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.Name</td>
						<td>
							@if (!string.IsNullOrEmpty(item.UserImage))
							{
								<img class="img-style" src="@Url.Content("~/images/" + item.UserImage)" alt="User Image" />
							}
							else
							{
								<img src="@Url.Content("~/images/user.png")" class="img-style" />
							}
						</td>
						<td>@item.Email</td>
						<td>@item.Password</td>
						<td>@item.Age</td>
						
						<td>
							<a onclick="showConfirmation('@Url.Action("DeleteStudent", "Admin", new { id = item.Id })')">
								<i class="fa-solid fa-trash-can" style="color: darkred; font-size: 24px;"></i>
							</a>
						</td>
						<td>
							<a asp-action="UpdateStudent" asp-controller="Admin" asp-route-id="@item.Id">
								<i class="fa-regular fa-pen-to-square" style="color: #00224D; font-size: 24px;"></i>
							</a>
						</td>
						<td>
							<a asp-action="StudentDetails" asp-controller="Admin" asp-route-id="@item.Id">
								<i class="fa-solid fa-eye" style="color: #5D0E41; font-size: 24px;"></i>
							</a>
						</td>
					</tr>
				}
			}

		</tbody>
	</table>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.js"></script>

	<script>
		$(document).ready(function () {
			$('#example').DataTable();
			pagingType: 'simple_numbers';
		});
		function showConfirmation(url) {
			Swal.fire({
				title: 'Are you sure You want to delete this intake?',
				icon: 'warning',
				showCancelButton: true,
				confirmButtonColor: '#3085d6',
				cancelButtonColor: '#d33',
				confirmButtonText: 'Yes, delete it!',
				cancelButtonText: 'No, cancel!',
			}).then((result) => {
				if (result.isConfirmed) {
					window.location.href = url;
					Swal.fire(
						'Deleted!',
						'Intake has been deleted.',
						'success'
					);
				}

			});
		}
	</script>
</body>
</html>



