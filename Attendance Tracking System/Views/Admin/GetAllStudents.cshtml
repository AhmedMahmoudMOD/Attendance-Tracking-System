@model IEnumerable<Student>
<html>
<head>

	<style>
		td:hover {
			cursor: pointer;
		}

		.rwd-table tr:first-child {
			border-top: none;
			background-color: white;
			color: #212529;
		}

		.img-style {
			width: 50px;
			height: 50px;
			border-radius: 50%;
		}

	</style>

	<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


</head>
<body>
	@if (TempData["ShowAlert"] != null && (bool)TempData["ShowAlert"])
	{
		<div id="alertContainer">
			<h1 class="alert alert-success" style="text-align:center">@TempData["ErrorMessage"]</h1>
		</div>
	}


	<div style="display:flex;flex-direction:row;align-content:space-between">

		<h2 style="color:#5D0E41;margin-left:10px;margin-right:60%">Students Data</h2>

		@using (Html.BeginForm("UploadExcel", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
		{
			<div class="form-group">
				<label for="file" style="display: none;">Choose Excel file:</label>
				<label for="file" class="file-input-label">
					<img src="~/images/microsoft-excel.svg" width="70px" /> Upload Excel File
				</label>
				<input type="file" name="file" id="file" class="form-control-file" accept=".xlsx,.xls" style="display: none;" />
			</div>
			<button type="submit" class="btn btn-dark">Upload</button>
		}

		@if (!string.IsNullOrEmpty(ViewBag.Message))
		{
			<div class="alert alert-info mt-3">@ViewBag.Message</div>
		}
	</div>




	<table class="table table-hover" style="text-align:center;width:90%;margin:20px;border-radius:15px;">
		<thead class="thead-dark">
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Name</th>
				<th scope="col">Image</th>
				<th scope="col">Email</th>
				<th scope="col">Password</th>
				<th scope="col">Age</th>
				<th scope="col">Delete</th>
				<th scope="col">Edit</th>
				<th scope="col">Details</th>
			</tr>
		</thead>
		<tbody>
			@if (Model.Count() == 0)
			{
				<tr>
					<td colspan="9" style="font-weight:bold">No Students Yet!</td>
				</tr>
			}
			else
			{
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.Name</td>
						<td>
							@if (!string.IsNullOrEmpty(item.UserImage))
							{
								<img class="img-style" src="@Url.Content("~/images/" + item.UserImage)" alt="User Image" />
							}
							else
							{
								<img src="@Url.Content("~/images/user.png")" class="img-style" />
							}
						</td>
						<td>@item.Email</td>
						<td>@item.Password</td>
						<td>@item.Age</td>
						
						<td>
							<a asp-action="DeleteStudent" asp-controller="Admin" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this Student?')">
								<i class="fa-solid fa-trash-can" style="color: darkred; font-size: 24px;"></i>
							</a>
						</td>
						<td>
							<a asp-action="UpdateStudent" asp-controller="Admin" asp-route-id="@item.Id">
								<i class="fa-regular fa-pen-to-square" style="color: #00224D; font-size: 24px;"></i>
							</a>
						</td>
						<td>
							<a asp-action="StudentDetails" asp-controller="Admin" asp-route-id="@item.Id">
								<i class="fa-solid fa-eye" style="color: #5D0E41; font-size: 24px;"></i>
							</a>
						</td>
					</tr>
				}
			}

		</tbody>
	</table>

	<script>
		$(document).ready(function () {
			$("#searchText").on("input", function () {
				var data = $(this).val().trim().toLowerCase();
				$("#keywords tbody tr").each(function () {
					var rowText = $(this).text().trim().toLowerCase();
					if (rowText.includes(data)) {
						$(this).show();
					} else {
						$(this).hide();
					}
				});
			});
			setTimeout(function () {
				document.getElementById('alertContainer').style.display = 'none';
			}, 3000);
		});
	</script>
</body>
</html>



