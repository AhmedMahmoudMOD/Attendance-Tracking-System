
@{
    ViewData["Title"] = "StaffAttendance";
    Layout = "~/Views/Shared/_SLayout.cshtml";
    var today = DateOnly.FromDateTime(DateTime.Now);
    string formattedDate = today.ToString("yyyy-MM-dd");

}
<div id="container" class="container-fluid mt-3">
    <div class="row justify-content-around">
        <form asp-action="GetStaffAttPieChart" asp-controller="Chart" class="row col-12">

        <div class="col-3">
            <input type="date" class="form-control" id="date" name="Date" value="@formattedDate" />
        </div>
        <div class="col-4">
            <select id="stafftype" class="form-control" name="TypeNo" onchange="GetStaffAttendanceList(this.value)">
                <option selected value="1">Instructors</option>
                <option value="2">Employees</option>
            </select>
        </div>
        <div class="col-3">
            <input type="button" value="Show Staff" name="Submit" class="btn btn-success" onclick="GetStaffAttendanceList(stafftype.value,date.value)" />
            <button type="button" value="Get Report" name="Submit" class="btn" onclick="GetAttendanceReport(stafftype.value,date.value)"><i class="fa-solid fa-print fa-lg" style="color: #121212;"></i></button>
            <button type="submit" value="Get Chart" name="Submit" class="btn"><i class="fa-solid fa-chart-pie fa-lg" style="color: #0c0d0d;"></i></button>
        </div>
        </form>
    </div>
</div>
<div id="AttList" class="mt-3 container row justify-content-around">
</div>

@section Scripts {
    <script>
        function GetStaffAttendanceList(typeno,date) {
            $.ajax({
                url: "/Attendance/GetStaffAttendance",
                data: { TypeNo: typeno , Date:date},
                success: function (result) {
                    $('#AttList').html('');
                    $("#AttList").html(result)
                }
            });
        }

        function GetAttendanceReport(typeno, date) {
            $.ajax({
                url: "/Report/GetStaffAttendanceReport",
                data: { TypeNo:typeno, Date: date },
                success: function (result) {
                }
            });
        }
    </script>

}

