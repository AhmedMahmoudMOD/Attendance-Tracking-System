@model ITIProgram
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_ProgramLayout.cshtml";
    List<Track> tracks = ViewBag.Tracks;
    SelectList alltracks = new SelectList(tracks, "Id", "Name");
    List<Intake> intakes = ViewBag.Intakes;
    SelectList allintakes = new SelectList(intakes, "No", "Name");
}

<h1 style="color:#15859c;margin-left:126px;">Update Program :@Model.Name</h1>

    <div class="w-75 m-auto mt-4">
    <div class="card mb-3">
      <div class="card-body">
    <form method="post" class="row">

        <div class="form-group col-6 mb-3">
            <label asp-for="Id" class="control-label mb-2"></label>
            <input asp-for="Id" class="form-control" readonly/>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group col-6 mb-3">
            <label asp-for="Name" class="control-label mb-2"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-6 mb-3">
            <label asp-for="Duration" class="control-label mb-2"></label>
            <select asp-for="Duration" class="form-control">
                <option>--Select Duration--</option>
                @foreach (var duration in Enum.GetValues(typeof(ProgramDuration)))
                {
                    <option value="@duration">@duration</option>
                }
            </select>
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <div class="form-group col-6 mb-3">
            <label asp-for="IsDeleted" class="control-label mb-2"></label>
            <select asp-for="IsDeleted" class="form-control">
                <option value="false">No</option>
                <option value="true">Yes</option>
            </select>
            <span asp-validation-for="IsDeleted" class="text-danger"></span>
        </div>
        <div class="form-group col-6 mb-3">
            <label for="tracks" class="control-label mb-2">Tracks</label>
            <select name="tracks" id="tracks" class="form-control" asp-items="alltracks">
                <option>--Select Track--</option>
            </select>
        </div>
        <div class="form-group col-6 mb-3">
            <label for="Intakes" class="control-label mb-2">Intakes</label>
            <select name="Intakes" id="Intakes" class="form-control" asp-items="allintakes">
                <option>--Select Intake--</option>
            </select>
        </div>
    
        <div class="form-group">
            <input type="submit" value="Submit" class="btn w-25" style="background-color:#15859c;color:#fff"/>
            <a class="btn w-25" style="background-color:#1472cc;color:#fff"
               asp-action="Index" asp-controller="Program">
                Back
            </a>
        </div>
    </form>
</div>
</div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<partial name="_ValidationScriptsPartial" />



