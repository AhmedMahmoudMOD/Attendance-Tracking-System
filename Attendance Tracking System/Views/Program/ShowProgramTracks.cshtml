@model ITIProgram
@{
    ViewData["Title"] = "ShowModelTracks";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="~/css/dataTable.css" rel="stylesheet" />
     <style>
        .tstyle {
            text-align: center;
            width: 90%;
            margin: 20px;
            border-radius: 15px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-weight: 500;
        }
        .nav-link:hover {
            background-color: transparent;
            color: #001F3D;
        }
    </style>
</head>
<body>
<div class="container-fluid w-75 text-center">
    <a class="nav-link m-1" asp-controller="Program" asp-action="Index">
        <div class="sb-nav-link-icon" style="color:#001F3D;font-size:40px;text-align:left">
            <i class="fas fa-arrow-left"></i>
        </div>
    </a>
    <h1 style="color:#15859c;margin-left:15px;">@Model.Name Tracks</h1> 
    <table class="table table-hover table-bordered tstyle" id="example">
            <thead style="background-color:#001F3D;color:white" class="text-center">
        <tr>
                <th>Track Id</th>
               <th>Track Name</th>
        </tr>
    </thead>
    <tbody>
         @if (Model.Tracks.Any())
            {
                @foreach(var track in Model.Tracks)
                {
                    <tr>
                        <td>@track.Id</td>
                        <td>@track.Name</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">No tracks available</td>
                </tr>
            }
        
    </tbody>
</table>
</div>
    <footer class="footer-style">
        <div class="container-fluid">
            <div class="row">
                <div class="col-5 ">
                    <p class="no-padding">
                        Over 30 years, ITI has kept updating its training portfolio thru continuous
                        monitoring for the future global tech trends, as well as the country’s national
                        and mega projects,hence; sustaining its graduates’ employment percentage
                        to 85 prior their graduation.
                    </p>
                </div>
                <div class="col-3">
                    <h4>Contact Us</h4>
                    <p>28 Km by Cairo / Alexandria Desert Road, 6<br> October, B148, Egypt</p>
                    <div class="tele">
                        <i class="fa-solid fa-phone"></i>
                        <span>(+202) 353-55656</span>
                    </div>
                    <div class="email">
                        <i class="fa-solid fa-envelope"></i>
                        <span>ITIinfo@iti.gov.eg</span>
                    </div>
                </div>
                <div class="col-3">
                    <h4>Follow Us</h4>
                    <a href="https://www.facebook.com/ITIchannel/">
                        <i class="fa-brands fa-facebook-f" style="font-size: 20px;"></i>
                    </a>
                    <a href="https://www.linkedin.com/school/information-technology-institute-iti-/?originalSubdomain=eg">
                        <i class="fa-brands fa-linkedin" style="font-size: 20px;"></i>
                    </a>
                    <a href="https://twitter.com/itichannel2">
                        <i class="fa-brands fa-twitter" style="font-size: 20px;"></i>
                    </a>

                    <a href="https://www.youtube.com/user/itichannel">
                        <i class="fa-brands fa-youtube" style="font-size: 20px;"></i>
                    </a>

                </div>
            </div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
</body>
</html>