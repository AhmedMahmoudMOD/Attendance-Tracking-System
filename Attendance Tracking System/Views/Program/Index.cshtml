@model List<ITIProgram>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ProgramLayout.cshtml";
}
<style>
    .tstyle {
        text-align: center;
        width: 90%;
        margin: 20px;
        border-radius: 15px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 500;
    }
</style>

<div style="display:flex;flex-direction:row;align-content:space-between">
    <h1 style="color:#15859c;margin-left:15px;margin-right:60%">Programs Data</h1>
</div>

<table class="table table-hover  display tstyle">
    <thead style="background-color:#001F3D;color:white">
      <tr>
        <th>Name</th>
        <th>Duration</th>
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
        @foreach(var program in Model)
        {
            <tr>
                <td>@program.Name</td>
                <td>@program.Duration</td>
                <td><a asp-action="Details" asp-controller="Program" asp-route-id="@program.Id">
                        <i class="fa-solid fa-eye" style="color:#15859c; font-size: 24px;"></i>
                </a></td>
                <td><a asp-action="Update" asp-controller="Program" asp-route-id="@program.Id">
                        <i class="fa-regular fa-pen-to-square" style="color: #00224D; font-size: 24px;"></i>
                </a></td>
                <td><a asp-action="Delete" asp-controller="Program" asp-route-id="@program.Id"
                       onclick="return confirm('Are you sure you want to delete this ?')">
                        <i class="fa-solid fa-trash-can" style="color: darkred; font-size: 24px;"></i>
                    </a>
                </td>
           </tr>
        }

    </tbody>


</table>


