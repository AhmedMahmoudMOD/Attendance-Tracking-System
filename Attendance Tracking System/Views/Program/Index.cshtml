@model List<ITIProgram>
@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="~/css/dataTable.css" rel="stylesheet" />
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

    <style>
        .tstyle {
            text-align: center;
            width: 90%;
            margin: 20px;
            border-radius: 15px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-weight: 500;
        }

        .nav-link:hover {
            background-color: transparent;
            color: #001F3D;
        }

        #example_wrapper
        {
            padding:40px 20px;
        }
    </style>
</head>
<body>
<div style="display:flex;flex-direction:row;align-content:space-between">
    <h1 style="color:#15859c;margin-left:15px;margin-right:60%">Programs Data</h1>
      <a class="btn " style="height:40px;background-color:#001F3D;color:white" href="/Program/Create">Add new Program</a>
</div>

<table  id="example" class="table table-hover display tstyle">
    <thead style="background-color:#001F3D;color:white" class="text-center">
      <tr>
            <th scope="col">Name</th>
            <th scope="col">Duration</th>
            <th scope="col">Details</th>
            <th scope="col">Update</th>
            <th scope="col">Intakes</th>
            <th scope="col">Tracks</th>
            <th scope="col">Instructors</th>
            <th scope="col">Students</th>
            <th scope="col">Delete</th>
    </tr>
    </thead>
    <tbody>
        @foreach(var program in Model)
        {
            <tr>
                <td>@program.Name</td>
                <td>@program.Duration</td>
                <td><a asp-action="Details" asp-controller="Program" asp-route-id="@program.Id">
                        <i class="fa-solid fa-eye" style="color:#15859c; font-size: 24px;"></i>
                </a></td>
                <td><a asp-action="Update" asp-controller="Program" asp-route-id="@program.Id">
                        <i class="fa-regular fa-pen-to-square" style="color:#00224D; font-size: 24px;"></i>
                </a></td>
                <td>
                    <a asp-action="ShowProgramIntakes" asp-controller="Program" asp-route-id="@program.Id">
                        <i class="fas fa-calendar" style="color:#15859c; font-size: 24px;"></i>
                    </a>
                </td>
                <td>
                    <a asp-action="ShowProgramTracks" asp-controller="Program" asp-route-id="@program.Id">
                            <i class="far fa-calendar" style="color:#00224D; font-size: 24px;"></i>
                    </a>
                </td>
                <td>
                    <a asp-action="ShowProgramInstructors" asp-controller="Program" asp-route-id="@program.Id">
                            <i class="fas fa-chalkboard-teacher" style="color:#15859c; font-size: 24px;"></i>
                    </a>
                </td>
                <td>
                    <a asp-action="ShowProgramStudents" asp-controller="Program" asp-route-id="@program.Id">
                            <i class="fas fa-graduation-cap" style="color:#00224D; font-size: 24px;"></i>
                    </a>
                </td>
                <td><a asp-action="Delete" asp-controller="Program" asp-route-id="@program.Id"
                       onclick="return confirm('Are you sure you want to delete this ?')">
                        <i class="fa-solid fa-trash-can" style="color:#6f0e0e; font-size: 24px;"></i>
                    </a>
                </td>
           </tr>
        }

    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.js"></script>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
</body>
</html>


